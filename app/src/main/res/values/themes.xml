<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MindValley" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/color_primary</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
    </style>

    <style name="mentoring">
        <item name="android:textSize">30sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#C1C1C1</item>
    </style>

    <style name="new_episode">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#95989D</item>
    </style>

    <style name="styleTitleChannel">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="styleTitle">
        <item name="android:textSize">13sp
        </item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textColor">#95989D</item>


    </style>

    <style name="styleEpisodes">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#95989D</item>

    </style>


</resources>